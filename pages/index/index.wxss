}
.container {
  position: absolute;
  left: 0;
  width: 100%;
  top: 0;
  padding: 0;
  height: 600rpx;
  display: block;
  color: rgb(94, 192, 216);
  font-weight: normal; 
}
.w{
  color: white;
}
.center{
  text-align: center;
  margin: auto 0;
}
.line{
  border-left: 1rpx solid #fff;
}

.nowWeather { 
   padding: 60rpx;
}

.weatherDetail {  
  /* border: 1rpx solid #fff; */
